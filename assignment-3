pipeline {
    agent none

    parameters {
        choice(name: 'STAGE', choices: ['build','deploy','test'], description: 'Stages to build')
    }

    stages {
        stage('Build') {
            agent any 
            steps {
                script {
                    if(params.STAGE == 'build')
                    {                        
                        echo "starting build stage"
                        sh '''
                            #!/bin/bash 
                            pwd 
                            echo "Starting build stage"
                            echo "This is build stage"
                            sleep 5
                        '''              
                    } 
                }     
            }
        }

        stage('Deploy') {
            agent any
            steps {
                script {
                    if(params.STAGE == 'deploy')
                    {    
                        sh 'echo "starting deploy stage"'
                        sh 'ls > log-deployfile'
                        sh 'sleep 5'   
                    } 
                }        
            }
        }
        stage('TEST') {
            agent any
            steps {
                script {
                  if(params.STAGE == 'test')
                      {
                        sh 'echo "This is a TESTING stage"'
                        echo "Running test stage"
              } 
        }
    }
 }
 }
 }
