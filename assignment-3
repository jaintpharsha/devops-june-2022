pipeline {
    agent none

    parameters {
        choice(name: 'STAGE', choices: ['build','deploy'], description: 'Stages to build')
    }

    stages {
        stage('Build') {
            agent any 
            steps {
                script {
                    if(params.STAGE == 'build')
                    {
                        git branch: params.BRANCH, url: params.GIT_REPO
                        echo "starting build stage"
                        sh '''
                            #!/bin/bash 
                            pwd 
                            ls > log-buildfile
                            echo "This is build stage"
                            sleep 5
                        '''              
                    } else {
                        echo "Build stage not be completed as per the selected parameter"
                    }
                }     
            }
        }

        stage('Deploy') {
            agent any
            steps {
                script {
                    if(params.STAGE == 'deploy')
                    {    
                        sh 'echo "starting deploy stage"'
                        sh 'ls > log-deployfile'
                        sh 'sleep 5'   
                    } else {
                         echo "Deploy stage not be completed as per selected parameter"
                         }
                }        
            }
        }
        stage('TEST') {
            agent any
            steps {
                if(params.STAGE == 'test')
                    {
                      sh 'echo "This is a TEST stage"'
                      echo "Running test stage"
            } else {
                      echo "Test stage not be completed as per selected parameter"
                      }
        }
    }
 }
 }
