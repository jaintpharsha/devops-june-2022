pipeline {
    agent none 
    stages {
        stage('BUILD') {
            agent any
            steps {
                sh '''
                    #!/bin/bash 
                    pwd 
                    ls
                    echo "This is a BUILD stage"
                    date
                '''  
            }
        }
        
        stage('DEPLOY') {
            agent { label 'slave1' } 
            steps {
                echo "This is a DEPLOY stage"
            }
        }

        stage('TESTING1') {
            agent { label 'slave1' } 
            steps {
                sh 'echo "This is a TESTING1 stage"'
            }
        }

        stage('TESTING2') {
            agent { label 'any' } 
            steps {
                sh '''
                    echo "This is a TESTING2 stage"
                    echo "running on master"
                '''
            }
        }
    }
}
